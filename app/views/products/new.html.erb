<h1>New product</h1>

<% form_for @product, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :sale %><br />
    <%= f.check_box :sale %>
  </p>
  <p>
  <%= f.file_field :photo %>
  </p>

  <% f.fields_for :avatars do |avatar_form| %>
    <%= avatar_form.label :name %><br />
    <%= avatar_form.text_field :name %>
    <%= avatar_form.check_box :main %>
  <% end %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>
